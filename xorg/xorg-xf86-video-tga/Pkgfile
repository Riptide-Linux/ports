# Description: xorg driver xf86-video-tga
# URL: http://xorg.freedesktop.org
# Maintainer: CRUX Xorg Team, xorg-ports at crux dot nu
# Depends on: xorg-server

name=xorg-xf86-video-tga
version=1.2.2
release=2
source=(http://xorg.freedesktop.org/releases/individual/driver/xf86-video-tga-$version.tar.bz2 mibstore.patch)

build() {
	cd xf86-video-tga-$version
	patch -p1 -i $SRC/mibstore.patch
	./configure --prefix=/usr

	make
	make DESTDIR=$PKG install
}
